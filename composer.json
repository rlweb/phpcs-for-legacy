{
  "name": "rlweb/phpcs-for-legacy",
  "description": "Bring old codebases to new standards",
  "minimum-stability": "stable",
  "license": "MIT",
  "authors": [
    {
      "name": "Rhys Laval",
      "email": "rhyslaval@gmail.com"
    }
  ],
  "require-dev": {
    "phpunit/phpunit": "^7.2"
  },
  "require": {
    "php": ">7",
	"ext-json": "*",
    "symfony/console": "4.*",
    "symfony/process": "4.*",
    "squizlabs/php_codesniffer": "3.*"
  },
  "bin": [
    "phpcslegacy"
  ],
  "autoload": {
    "psr-4": {
      "Rlweb\\PHPCSLegacy\\": "src/"
    }
  },
  "autoload-dev": {
    "psr-4": {
      "Rlweb\\PHPCSLegacyTests\\": "tests/"
    }
  }
}
